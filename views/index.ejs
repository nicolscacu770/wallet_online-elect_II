<!DOCTYPE html>
<html lang="en">
<header><%-include('templates/header.ejs')%></header>

<body>
    <%-include('templates/menu.ejs')%>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1><%= title%></h1>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Opcion</th>
                      </tr>
                    </thead>
                    <tbody>
                        <%if(movimiento.length > 0){
                            
                            var cont = 1
                                for (let v=0; v < movimiento.length; v++){%>
                                    <tr>
                                        <td><%=v+1%></td>
                                        <td><%=movimiento[v].id%></td>
                                        <td><%=movimiento[v].nombre%></td>
                                        <td><%=movimiento[v].descripcion%></td>
                                        <td><%=movimiento[v].fecha%></td>
                                        <td><%=movimiento[v].valor%></td>
                                    </tr>
                                <%}cont++%>
                            <%}else{%>
                                <h3>No hay movimiento</h3>
                        <%}%>
                    </tbody>
                    <!--<h3>Se recibieron <%=movimiento.size%> movimientos</h3>-->
                  </table>
                  <%-include('templates/modal.ejs')%>
            </div>
        </div>
    </div>    


<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
<script src="/js/scripts.js"></script>
</body>
</html>